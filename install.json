{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "source/app.css"
      },
      {
        "type": "script",
        "src": "source/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "order": 0,
        "title": "Location",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "countdownTitle": {
        "order": 1,
        "title": "Countdown Title",
        "type": "string"
      },
      "deadline": {
        "order": 2,
        "title": "Deadline date and time",
        "type": "string",
        "format": "date-time",
        "default": "January 1 2018 18:00:00"
      },
      "color": {
        "order": 2,
        "title": "Color",
        "type": "string",
        "format": "color",
        "default": "#c31d08"
      }
    }
  }
}
